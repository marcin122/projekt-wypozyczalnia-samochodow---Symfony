{% extends 'base.html.twig' %}

{% block content %}	

{% if error %}
    <div style="color:red;">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}	

          <form action="{{ path('login') }}" method="post">
                <label for="email">
                    Adres e-mail:
                </label><br>                       
                <input type="text" id="email" name="_email" placeholder="Podaj adres e-mail" value="{{ last_username }}">
                 <br>       
                <label for="password">
                    Hasło:
                </label><br>
                <input type="password" id="password" name="_password" placeholder="Podaj hasło"><br>
                <input type="submit" value="Zaloguj się">
          </form>
                
{% endblock %}